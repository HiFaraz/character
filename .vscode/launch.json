{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run example: local",
      "program": "${workspaceFolder}/examples/local/index.js",
      "stopOnEntry": false,
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}\\lib\\**\\*.js"],
      "smartStep": true
    },
    {
      "request": "launch",
      "type": "node",
      "name": "Run tests",
      "program": "${workspaceRoot}\\node_modules\\mocha\\bin\\_mocha",
      "stopOnEntry": false,
      "args": ["lib/**/*.spec.js", "lib/test"],
      "env": {
        "DEBUG": "identity-desk*"
      },
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}\\lib\\**\\*.js"],
      "smartStep": true
    }
  ]
}
